              ]
            },
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/reviews/admin/stats"
          }
        },
        {
          "name": "Delete Review (Admin)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
